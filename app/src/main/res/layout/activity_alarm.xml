<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity" >



   <!-- <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <DatePicker
                android:id="@+id/pickerdate"
                android:layout_width="367dp"
                android:layout_height="308dp"
                android:headerBackground="@color/colorDull"
                android:headerDayOfMonthTextAppearance="@style/TextAppearance.AppCompat.Small"
                android:headerMonthTextAppearance="@style/TextAppearance.AppCompat.Small"
                android:headerYearTextAppearance="@style/Base.Widget.AppCompat.Button.Small" />
            //android:layout_weight="0.83" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Time"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorWhite"
                android:background="@color/colorDull"/>

            <TimePicker

                android:layout_marginTop="10dp"
                android:id="@+id/pickertime"
                android:timePickerMode="spinner"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:headerBackground="@color/colorDull"

                />
                android:layout_weight="0.53"

            <Button
                android:id="@+id/setalarm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Set Alarm"
                android:layout_weight="0.40"
                android:background="@color/colorDull"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    <!--</ScrollView>-->

</LinearLayout>


